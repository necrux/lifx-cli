#!/usr/bin/env python3

import argparse
from auth import Auth
from devices import Devices
from lights import Lights
from scenes import Scenes

auth = Auth()
device = Devices()
light = Lights()
scene = Scenes()

# Create the parser
description = 'Control LIFX devices and settings via the CLI.'
epilog = 'Run `lifx --configure` to setup authentication.'
job_options = argparse.ArgumentParser(description=description, epilog=epilog)

# Add the arguments
job_options.add_argument('--configure',
                         default=False,
                         action='store_true',
                         help='Add your LIFX token to the local authentication file: ~/.keys')
job_options.add_argument('-d',
                         '--devices',
                         default=False,
                         action='store_true',
                         help='List LIFX devices.')
job_options.add_argument('-s',
                         '--scenes',
                         default=False,
                         action='store_true',
                         help='List LIFX scenes.')
job_options.add_argument('-l',
                         '--light',
                         default='all',
                         action='store',
                         metavar='ID',
                         help='Specify the light/group ID to control; must include -g for groups.')
job_options.add_argument('-g',
                         '--group',
                         default=False,
                         action='store_true',
                         help='Specify whether or not the target light is a group.')
job_options.add_argument('-t',
                         '--toggle',
                         default=False,
                         action='store_true',
                         help='Toggle the specified light.')
job_options.add_argument('-e',
                         '--state',
                         default=False,
                         action='store_true',
                         help='Set the state for the specified light.')
job_options.add_argument('-c',
                         '--color',
                         default='green',
                         action='store',
                         help='Use the specified color. [Default: green]')
job_options.add_argument('-p',
                         '--power',
                         default='on',
                         action='store',
                         help='State: on or off [Default: on]')
job_options.add_argument('-b',
                         '--brightness',
                         default=0.5,
                         action='store',
                         help='State: 0.0 to 1.0 [Default: 0.5]')
job_options.add_argument('-i',
                         '--infrared',
                         default=0.5,
                         action='store',
                         help='State: 0.0 to 1.0 [Default: 1.0]')
job_options.add_argument('-u',
                         '--duration',
                         default=1,
                         action='store',
                         help='State: How long the action will take (in seconds). [Default: 1]')
job_options.add_argument('-a',
                         '--activate',
                         default=False,
                         action='store',
                         metavar='ID',
                         help='Activate scene.')
job_options.add_argument('--breathe',
                         default=False,
                         action='store_true',
                         help='Effects: Breathe')
job_options.add_argument('--stop',
                         default=False,
                         action='store_true',
                         help='Effects: Stop')

args = job_options.parse_args()
configure = args.configure
devices = args.devices
scenes = args.scenes
light_id = args.light
group = args.group
toggle = args.toggle
state = args.state
color = args.color
power = args.power
brightness = args.brightness
infrared = args.infrared
duration = args.duration
scene_id = args.activate
breathe = args.breathe
stop = args.stop

# Configure authentication.
if configure:
    auth.configure()
    exit(0)

# Lists
if devices:
    device.get()
if scenes:
    scene.get()

# Controls (non-effects)
if toggle:
    light.toggle(light_id, group)
if scene_id:
    scene.activate(scene_id)
if state:
    light.set_state(light_id, group, color, power, brightness, duration, infrared)

# Effects
if breathe:
    light.breathe_effect(light_id, group, color)
if stop:
    light.stop_effect(light_id, group)
